<section class="form">
  <%= form_for [@job] do |f| %>
    <div>
      <%= f.label :category_id %>
      <%= f.collection_select(:category_id, Category.all, :id, :title) %>
    </div>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :company_id %>
      <%= f.collection_select(:company_id, Company.all, :id, :name) %>
    </div>
    <div>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div>
      <%= f.label :level_of_interest %>
      <%= f.number_field :level_of_interest, max: 5 %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</section>
